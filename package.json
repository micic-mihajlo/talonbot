{
  "name": "talonbot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "doctor": "tsx src/diagnostics/doctor.ts",
    "cli": "tsx src/cli/talonbot.ts",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "prepare": "mkdir -p dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "ci": "npm run build && npm run test",
    "setup": "./install.sh"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@slack/bolt": "^4.2.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.0",
    "vitest": "^2.1.8",
    "tsx": "^4.19.1",
    "typescript": "^5.7.2"
  }
}
