{
  "name": "talonbot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "npm run lint:shell",
    "lint:shell": "bash scripts/ci/lint-shell.sh",
    "typecheck": "tsc -p tsconfig.typecheck.json --noEmit",
    "doctor": "tsx src/diagnostics/doctor.ts",
    "cli": "tsx src/cli/talonbot.ts",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "prepare": "mkdir -p dist",
    "test": "vitest run",
    "test:unit": "vitest run test/config-schema.test.ts test/startup-checks.test.ts test/control-plane.test.ts test/bridge-supervisor.test.ts test/github-automation.test.ts test/sentry-agent.test.ts",
    "test:integration": "vitest run test/runtime.test.ts test/runtime-sentry.test.ts test/platform-capabilities.test.ts test/platform-resilience.test.ts",
    "test:release": "vitest run test/release-endpoints.test.ts test/platform-capabilities.test.ts test/platform-resilience.test.ts",
    "test:shell": "vitest run test/shell-ops.test.ts",
    "test:smoke": "bash scripts/ci/smoke-runtime.sh",
    "test:smoke:bootstrap": "bash scripts/ci/smoke-bootstrap-install.sh",
    "test:watch": "vitest",
    "ci:p0": "npm run build && npm run lint && npm run typecheck && npm run test && npm run test:smoke",
    "ci": "npm run ci:p0",
    "setup": "./install.sh"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@slack/bolt": "^4.2.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.0",
    "vitest": "^2.1.8",
    "tsx": "^4.19.1",
    "typescript": "^5.7.2"
  }
}
